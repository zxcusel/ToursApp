<Window x:Class="AviationTickets.Windows.BookingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мои бронирования" Height="550" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2196F3">
            <Grid Margin="20,0">
                <TextBlock Text="📋 Мои бронирования" FontSize="22" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>

                <DataGrid x:Name="BookingsDataGrid" SelectionChanged="BookingsDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Рейс" Binding="{Binding FlightNumber}" Width="100"/>
                        <DataGridTextColumn Header="Маршрут" Binding="{Binding Route}" Width="*"/>
                        <DataGridTextColumn Header="Дата вылета" Binding="{Binding DepartureDate}" Width="150"/>
                        <DataGridTextColumn Header="Пассажир" Binding="{Binding PassengerName}" Width="*"/>
                        <DataGridTextColumn Header="Место" Binding="{Binding SeatNumber}" Width="80"/>
                        <DataGridTextColumn Header="Дата брони" Binding="{Binding BookingDate}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Button Grid.Row="1" Content="Отменить бронирование" Width="200" Height="40" 
                    Margin="0,15,0,0" Background="#F44336" Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</Window>