<Window x:Class="AviationTickets.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авиабилеты - Главная" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2196F3">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="✈️ Авиабилеты" FontSize="22" FontWeight="Bold" 
                              Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="UserNameTextBlock" FontSize="14" Foreground="White" 
                              VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="Мои бронирования" Width="140" Height="35" 
                            Background="#1976D2" Click="MyBookingsButton_Click" Margin="0,0,10,0"/>
                    <Button Content="Выйти" Width="80" Height="35" 
                            Background="#F44336" Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Поиск рейсов" FontSize="18" FontWeight="Bold" 
                              Foreground="#2196F3" Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Откуда" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="DepartureTextBox" Height="35"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                            <TextBlock Text="Куда" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="DestinationTextBox" Height="35"/>
                        </StackPanel>

                        <Button Grid.Column="2" Content="Найти" Width="120" Height="35" 
                                VerticalAlignment="Bottom" Click="SearchButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>

                <DataGrid x:Name="FlightsDataGrid" SelectionChanged="FlightsDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Рейс" Binding="{Binding FlightNumber}" Width="100"/>
                        <DataGridTextColumn Header="Откуда" Binding="{Binding Departure}" Width="*"/>
                        <DataGridTextColumn Header="Куда" Binding="{Binding Destination}" Width="*"/>
                        <DataGridTextColumn Header="Дата и время" Binding="{Binding DepartureDate}" Width="150"/>
                        <DataGridTextColumn Header="Цена (₽)" Binding="{Binding Price}" Width="100"/>
                        <DataGridTextColumn Header="Мест" Binding="{Binding AvailableSeats}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="15" Margin="0,15,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="ФИО пассажира" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="PassengerNameTextBox" Height="35"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Номер места" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="SeatNumberTextBox" Height="35"/>
                    </StackPanel>

                    <Button Grid.Column="2" Content="Забронировать" Width="150" Height="35" 
                            VerticalAlignment="Bottom" Background="#4CAF50" Click="BookButton_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>